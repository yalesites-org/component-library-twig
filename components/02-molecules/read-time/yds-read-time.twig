{% set read_time__base_class = 'read-time' %}

{% set read_time__attributes = {
  'class': bem(read_time__base_class),
} %}

<div {{ add_attributes(read_time__attributes) }}>
  <div {{ bem('inner', [], read_time__base_class) }}>
    <span {{ bem('label', [], read_time__base_class) }}>{{read_time__label|default('Estimated read time')}}:</span>
    <span {{ bem('time', [], read_time__base_class) }} id="read_time">0</span>
    <span {{ bem('time__minutes', [], read_time__base_class) }}id="read_time_min">min</span>
  </div>
</div>
