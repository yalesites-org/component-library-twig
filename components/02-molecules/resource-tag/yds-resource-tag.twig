{#
 # Available Variables:
 # - resource_tag__content
 #}

{% set resource_tag__base_class = resource_tag__base_class|default('resource-tag') %}

{% set resource_tag__attributes = {
  'data-component-width': resource_tag__width|default('site'),
  'data-component-alignment': resource_tag__alignment|default('center'),
  'data-component-variation': resource_tag__variation|default('default'),
    class: bem(resource_tag__base_class, resource_tag__blockname, resource_tag__extra_classes),
} %}

<div {{ add_attributes(resource_tag__attributes) }}>
{% block prefix_suffix %}
{% endblock %}
	<div {{ bem('content', [], resource_tag__base_class) }}>
    {% include "@atoms/typography/text/yds-text.twig" with {
      text__content: resource_tag__content,
    } %}
	</div>
</div>
