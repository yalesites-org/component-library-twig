{#
 # Available Variables:
 # - embed__src
 # - embed__title
 # - embed__height: default('100%')
 # - embed__width: default('100%')
 # - embed__type: 'form', 'audio', 'unknown', default('form')
 # - embed__loading: 'lazy', 'eager', default('lazy')
 #}

{% set embed__base_class = 'embed' %}
{% set embed__height = embed__height|default('100%') %}
{% set embed__width = embed__width|default('100%') %}
{% set embed__type = embed__type|default('form') %}
{% set embed__loading = embed__loading|default('lazy') %}

{% set embed__attributes = {
  'data-component-width': 'site',
  'data-embed-type': embed__type,
  'class': bem(embed__base_class),
} %}

<div {{ add_attributes(embed__attributes) }}>
  {% block prefix_suffix %}
  {% endblock %}
  <div {{ bem('inner', [], embed__base_class) }}>
    {% block embed__block %}
      <iframe {{ bem('iframe', [], embed__base_class) }} title="{{ embed__title }}" src="{{ embed__src }}" height="{{ embed__height }}" width="{{ embed__width }}" loading="{{ embed__loading }}">
      </iframe>
    {% endblock %}
  </div>
</div>
