{% set color_pairing__base_class = 'cl-basic-themes-pairing' %}

{% for theme, value in _context.themes %}
  <div {{ bem(color_pairing__base_class) }} data-basic-theme={{ theme }}>
    <h2>Basic Theme: {{ theme }}</h2>
    <p class="text-field">Here's a paragraph with some text. And <a href="#">links can go here</a> too. Isn't that cool?</p>
    <div class="cta-group">
      {% include "@atoms/controls/cta/yds-cta.twig" with {
        cta__content: 'Cta Link',
        cta__href: '#',
      } %}
      {% include "@atoms/controls/cta/yds-cta.twig" with {
        cta__content: 'Outline',
        cta__style: 'outline',
        cta__href: '#',
      } %}
    </div>
    {% include "@molecules/social-links/yds-social-links.twig" with {
      icons: {
        1: {
          name: 'Facebook',
          icon: 'facebook',
          url: 'https://www.facebook.com',
        },
        2: {
          name: 'X',
          icon: 'x-twitter',
          url: 'https://www.twitter.com',
        }
      }
    } %}
  </div>
{% endfor %}
